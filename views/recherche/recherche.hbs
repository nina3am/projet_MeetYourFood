<div id="pageRecherche"> 
   <form class="formulaire-recherche" action="">
        <!--à supprimer quand view mobile avec le .js-->
        <div id="fields">
          <section class="form-field" id="demande_lieu">
            <label for="">LOCATION</label>
            <input type="text" placeholder="Where are you ?" name="location">
          </section>
          <section class="form-field" id="demande_date_arrivee">
            <label>DAY OF YOUR VISIT
              <select>
                <option value="monday">Monday</option>
                <option value="tuesday">Tuesday</option>
                <option value="wednesday">Wednesday</option>
                <option value="thursday">Thursday</option>
                <option value="friday">Friday</option>
                <option value="saturday">Saturday</option>
                <option value="sunday">Sunday</option>
              </select>
            </label>
          </section>
          <section class="form-field" id="demande_visiteurs">
            <label for="">NUMBER OF VISITORS</label>
            <input type="text" placeholder="1" name="visitors">
          </section>
        </div>
        <section id="loupe_recherche">
          <img id="loupe-icon" src="../images/loupe-icon.png" alt="loupe">
        </section>
      </form>
      {{!-- filtre et logos à traiter--}}
  <div id='entete-recherche'>
    <div>Filtres</div>
    <img src="" alt="logo list">
    <img src="" alt="logo carte">
  </div>

  <div>{{resultats.length}} RESULTS FOR YOU SEARCH</div>
  <ul id="listeResultats">
    {{#each resultats}}
      <li>{{> partialResultat this}}</li>
    {{/each}}
  </ul>
        
      {{!-- variable avec liste des résultats pour calculer nbre de résultats --}}
</div>