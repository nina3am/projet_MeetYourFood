<main class="content">
<div class="form edit-host">
        <h1>EDIT YOUR ACCOUNT</h1>
        {{#if validationMessage}}
        <p class="validation-message">{{validationMessage}}</p>
        {{/if}}
        {{#if errorMessage}}
        <p class="error-message">{{errorMessage}}</p>
        {{/if}}
        <form action="/edit/{{user.id}}" method="POST">
                <div id="user-form">
                        <label class="field">Firstname *<input type='text' name="firstName"
                                        value="{{user.firstName}}"></label>
                        <label class="field">Lastname *<input type='text' name="lastName"
                                        value="{{user.lastName}}"></label>
                        <label class="field">Username *<input type='text' name="userName"
                                        value="{{user.userName}}"></label>
                        <label class="field">Email *<input type='email' name="email" value="{{user.email}}"></label>
                        <label class="field">Password *<input type='password' name="password" placeholder="**********"
                                        value="{{user.password}}"></label>
                        <label class="field">Profile picture<input type="file" name="profilePic"
                                        class="upload" /></label>
                </div>
                <div id='host-form'>
                        <label class="field">Farm name *<input type='text' name="farmName"
                                        value="{{host.farmName}}"></label>
                        <label class="field">Description *<textarea name="description"
                                        value="{{host.description}}"></textarea></label>
                        <label class="field">Website<input type='text' name="website" value="{{host.website}}"></label>
                        <label class="field">Address *<textarea name="address"
                                        value="{{host.website}}"></textarea></label>
                        <label class="field">Zipcode *<input type='text' name="zipCode"
                                        value="{{host.zipCode}}"></label>
                        <fieldset>
                                <legend>City * </legend>
                                {{#each allCities}}
                                <div class="checkbox"><input type="checkbox" name="city" value="{{this}}" id="{{this}}"
                                                {{#inArray ../farmCity this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <fieldset>
                                <legend>Farm type *</legend>
                                {{#each allFarms}}
                                <div class="checkbox"><input type="checkbox" name="farmType" value="{{this}}"
                                                id="{{this}}" {{#inArray ../farmTypes this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <fieldset>
                                <legend>Activities available on the farm * </legend>
                                {{#each allActivities}}
                                <div class="checkbox"><input type="checkbox" name="activitiesType" value="{{this}}"
                                                id="{{this}}"
                                                {{#inArray ../farmActivities this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <fieldset>
                                <legend>Certifications </legend>
                                {{#each allCertifications}}
                                <div class="checkbox"><input type="checkbox" name="certifications" value="{{this}}"
                                                id="{{this}}"
                                                {{#inArray ../farmCertifications this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <fieldset>
                                <legend>Public</legend>
                                {{#each allPublics}}
                                <div class="checkbox"><input type="checkbox" name="public" value="{{this}}"
                                                id="{{this}}" {{#inArray ../farmPublics this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <fieldset>
                                <legend>Opening days *</legend>
                                {{#each allDays}}
                                <div class="checkbox"><input type="checkbox" name="openingDays" value="{{this}}"
                                                id="{{this}}" {{#inArray ../farmDays this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>
                        <label class="field">Opening Hours *
                                <div id="opening-hours"><input type='time' name="openingHoursStart"
                                                value="{{host.openingHoursStart}}">
                                        <input type='time' name="openingHoursEnd" value="{{host.openingHoursEnd}}">
                                </div></label>
                        <fieldset>
                                <legend>Spoken Languages *</legend>
                                {{#each allLanguages}}
                                <div class="checkbox"><input type="checkbox" name="spokenLanguages" value="{{this}}"
                                                id="{{this}}"
                                                {{#inArray ../farmLanguages this}}checked{{/inArray}}><label
                                                for="{{this}}">{{this}}</label></div>
                                {{/each}}
                        </fieldset>

                        {{!-- <label class="field">Farm photo *
                                {{#each host.photos}}<input type="file" name="photos" class="upload"
                                        value="{{this}}" />{{/each}}</label>
                                        <input type="file" name="photos" class="upload"
                                        value="{{this}}" /> --}}
                        {{!-- TODO Gérer la possibilité d'ajouter plusieurs photos sur la fiche host
      
      <input type="file" name="photo-2" />
      <input type="file" name="photo-3" /> --}}
                        </label>
                        <label class="field">Maximum visitors *<input type='text' name="maximumVisitors"
                                        value="{{host.maximumVisitors}}"></label>

                </div>
                <button class="btn primary">Save changes</button>
                <p class="mandatory">* ALL FIELDS ARE MANDATORY</p>
        </form>
</div>
</main>