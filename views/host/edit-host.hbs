<div class="form edit-host">
    <h1>EDIT YOUR ACCOUNT</h1>
    <form action="/edit/:userId" method="POST">
        <div id="user-form">
            <label class="field">Firstname *<input type='text' name="firstName" value="{{user.firstName}}"></label>
            <label class="field">Lastname *<input type='text' name="lastName" value="{{user.lastName}}"></label>
            <label class="field">Username *<input type='text' name="userName" value="{{user.userName}}"></label>
            <label class="field">Email *<input type='email' name="email" value="{{user.email}}"></label>
            <label class="field">Password *<input type='password' name="password" placeholder="**********"
                    value="{{user.password}}"></label>
            <label class="field">Profile picture<input type="file" name="profilePic" class="upload" /></label>
        </div>
        <div id='host-form'>
            <label class="field">Farm name *<input type='text' name="farmName" value="{{host.farmName}}"></label>
            <label class="field">Description *<textarea name="description"
                    value="{{host.description}}"></textarea></label>
            <label class="field">Website<input type='text' name="website" value="{{host.website}}"></label>
            <label class="field">Address *<textarea name="address" value="{{host.website}}"></textarea></label>
            <label class="field">Zipcode *<input type='text' name="zipCode" value="{{host.zipCode}}"></label>
            <label class="field">City *<select name="city">
                    <option value='bergerac'>Bergerac</option>
                    <option value='compiegne'>Compiègne</option>
                    <option value='clermont-ferrand'>Clermont-Ferrand</option>
                </select></label>
            <fieldset>
                <legend>Farm type * </legend>
                <div class="checkbox"><input type="checkbox" name="farmType" value="poultry" id="poultry"><label
                        for="poultry">Poultry
                        Farming</label></div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="pig" id="pig"><label for="pig">Pig
                        Farming</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="cow" id="cow"><label for="cow">Cow
                        Farming</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="sheep" id="sheep"><label
                        for="sheep">Sheep
                        Farming</label></div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="market" id="market"><label
                        for="market">Market
                        gardener</label></div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="viticulture" id="viticulture"><label
                        for="viticulture">Viticulture</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="beekeeping" id="beekeeping"><label
                        for="beekeeping">Beekeeping</label></div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="cheese" id="cheese"><label
                        for="cheese">Cheese
                        maker</label></div>
                <div class="checkbox"><input type="checkbox" name="farmType" value="dairy" id="dairy"><label
                        for="dairy">Dairy
                        maker</label></div>

            </fieldset>
            <fieldset>
                <legend>Activities available on the farm * </legend>
                <div class="checkbox"><input type="checkbox" name="activitiesType" value="tasting" id="tasting"><label
                        for="tasting">Tasting</label></div>
                <div class="checkbox"><input type="checkbox" name="activitiesType" value="direct-selling"
                        id="direct-selling"><label for="direct-selling">Direct
                        selling</label></div>
                <div class="checkbox"><input type="checkbox" name="activitiesType" value="workshops"
                        id="workshops"><label for="workshops">Workshops</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="activitiesType" value="self-tour"
                        id="self-tour"><label for="self-tour">Self
                        tour</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="activitiesType" value="guided-tour"
                        id="guided-tour"><label for="guided-tour">Guided
                        tour</label></div>
            </fieldset>

            <fieldset>
                <legend>Certifications</legend>
                <div class="checkbox"><input type="checkbox" name="certifications" value="bio" id="bio"><label
                        for="bio">Bio</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="certifications" value="aop" id="aop"><label
                        for="aop">AOP</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="certifications" value="aoc" id="aoc"><label
                        for="aoc">AOC</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="certifications" value="hve" id="hve"><label
                        for="hve">HVE</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="certifications" value="rse" id="rse"><label
                        for="rse">RSE
                        Agro</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="certifications" value="biodynamic"
                        id="biodynamic"><label for="biodynamic">Biodynamic</label>
                </div>

            </fieldset>
            <fieldset>
                <legend>Public</legend>
                <div class="checkbox"><input type="checkbox" name="public" value="children" id="children"><label
                        for="children">Children</label></div>
                <div class="checkbox"><input type="checkbox" name="public" value="seniors" id="seniors"><label
                        for="seniors">Seniors</label>
                </div>
                <div class="checkbox"><input type="checkbox" name="public" value="disabled" id="disabled"><label
                        for="disabled">Disabled
                        access</label></div>

            </fieldset>
            <fieldset>
                <legend>Opening days *</legend>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="monday" id="monday"><label
                        for="monday">Monday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="tuesday" id="tuesday"><label
                        for="tuesday">Tuesday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="wednesday" id="wednesday"><label
                        for="wednesday">Wednesday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="thursday" id="thursday"><label
                        for="thursday">Thursday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="friday" id="friday"><label
                        for="friday">Friday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="saturday" id="saturday"><label
                        for="saturday">Saturday</label></div>
                <div class="checkbox"><input type="checkbox" name="openingDays" value="sunday" id="sunday"><label
                        for="sunday">Sunday</label></div>
            </fieldset>
            <label class="field">Opening Hours *
                <div id="opening-hours"><input type='time' name="openingHoursStart" value="{{host.openingHoursStart}}">
                    <input type='time' name="openingHoursEnd" value="{{host.openingHoursEnd}}">
                </div></label>
            <fieldset>
                <legend>Spoken languages *</legend>
                <div class="checkbox"><input type="checkbox" name="spokenLanguages" value="french"><label
                        for="french">French</label></div>
                <div class="checkbox"><input type="checkbox" name="spokenLanguages" value="english"><label
                        for="english">English</label></div>
                <div class="checkbox"><input type="checkbox" name="spokenLanguages" value="spanish"><label
                        for="spanish">Spanish</label></div>
                <div class="checkbox"><input type="checkbox" name="spokenLanguages" value="german"><label
                        for="german">German</label></div>

            </fieldset>
            <label class="field">Farm photo *<input type="file" name="photos" class="upload" /></label>
            {{!-- TODO Gérer la possibilité d'ajouter plusieurs photos sur la fiche host
      
      <input type="file" name="photo-2" />
      <input type="file" name="photo-3" /> --}}
            </label>
            <label class="field">Maximum visitors *<input type='text' name="maximumVisitors"
                    value="{{host.maximumVisitors}}"></label>

        </div>
        <button class="btn primary">Save changes</button>
        <p class="mandatory">* ALL FIELDS ARE MANDATORY</p>
    </form>

    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}
</div>