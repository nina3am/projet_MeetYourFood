<div class="form visitor-profile">
  <h1>Welcome, {{ user.firstName }} {{ user.lastName }}</h1>
  <form action='edit/{{user.id}}' method="POST">
    <label class="field"><input type="email" value="{{user.email}}" name="email"></label>
    <label class="field"><input type="password" value="{{user.password}}" name="password"></label>
    <div id="btn"><button class="btn primary">Edit</button>
      <a href="/user/{{user.id}}/delete" class="btn secondary">Delete</a></div>
  </form>
</div>